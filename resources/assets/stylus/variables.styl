$main = #2088cc
$text = mix($main, #101010, 6%)
$darkbackground = mix($main, #101010, 6%)
$dialogColor = mix($main, #28, 10%)

$tablet = 1000px
$phone = 600px
$desktop = 1400px


col-12()
    max-width: $desktop
    margin: auto
    display: grid
    width: 100%
    padding: 0 20px
    grid-template-columns: repeat(12, minmax(0, 1fr))
    grid-gap: 20px